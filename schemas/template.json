{
  "$schema": "http://json-schema.org/draft-06/schema#",
  "$id": "https://raw.githubusercontent.com/Samuel-Martineau/MC-Config-Controller/master/schemas/template.json",
  "type": "object",
  "required": ["name", "extends", "keepFiles", "removeFiles"],
  "properties": {
    "name": {
      "$id": "#/properties/name",
      "type": "string"
    },
    "extends": {
      "$id": "#/properties/extends",
      "type": "array",
      "additionalItems": true,
      "items": {
        "type": "string"
      }
    },
    "keepFiles": {
      "$id": "#/properties/keepFiles",
      "type": "array",
      "additionalItems": true,
      "items": {
        "type": "string"
      }
    },
    "removeFiles": {
      "$id": "#/properties/removeFiles",
      "type": "array",
      "additionalItems": true,
      "items": {
        "type": "string"
      }
    }
  },
  "additionalProperties": false
}
